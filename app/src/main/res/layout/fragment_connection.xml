<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.silpe.vire.slip.fragments.ConnectionFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/connection_toplevel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.silpe.vire.slip.components.ProfilePictureView
            android:id="@+id/connection_profilePicture"
            android:layout_width="@dimen/account_profile_picture_size"
            android:layout_height="@dimen/account_profile_picture_size"
            android:layout_gravity="center"
            android:src="@drawable/empty_profile" />

        <TextView
            android:id="@+id/connection_fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_fullName"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/connection_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_description"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/connection_connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_connections"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/connection_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_phoneNumber"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/connection_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_email"
            android:textSize="@dimen/large_text" />

        <FrameLayout
            android:id="@+id/connection_collectionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/connection_collectionList_height" />

        <Button
            android:id="@+id/connection_removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/account_profile_margin"
            android:paddingEnd="@dimen/login_padding_horizontal"
            android:paddingLeft="@dimen/login_padding_horizontal"
            android:paddingRight="@dimen/login_padding_horizontal"
            android:paddingStart="@dimen/login_padding_horizontal"
            android:text="@string/connection_removeButton_text" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>
